{% extends 'layouts/base.admin.html.twig' %}

{% block title %}
  BackOffice | Liste des chevaux
{% endblock %}

{% block body %}
  <section class="section is-title-bar">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <ul>
            <li>Admin</li>
            <li>Chevaux</li>
          </ul>
        </div>
      </div>
      <div class="level-right">
        <a href="{{ path('app_admin_cheval_new') }}" class="button is-small is-primary">
          <span>Ajouter</span>
          <span class="icon"><i class="mdi mdi-plus"></i></span>
        </a>
      </div>
    </div>
  </section>

  <section class="section is-main-section">
    {% for label, messages in app.flashes(['success', 'danger']) %}
      {% for message in messages %}
        <div class="notification is-{{ label }}">
          <button class="delete"></button>
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}

    <div class="card has-table">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><i class="mdi mdi-horse"></i></span>
          {{ chevaux|length }} Chevaux
        </p>
        <a href="#" class="card-header-icon"><span class="icon"><i class="mdi mdi-reload"></i></span></a>
      </header>

      <div class="card-content">
        <div class="b-table has-pagination">
          <div class="table-wrapper has-mobile-cards">
            <table class="table is-fullwidth is-striped is-hoverable" id="table">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Race</th>
                  <th>Sexe</th>
                  <th>Date de naissance</th>
                  <th>Propriétaires</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for cheval in chevaux %}
                  <tr>
                    <td data-label="Nom">{{ cheval.nom }}</td>
                    <td data-label="Race">{{ cheval.race ? : 'N/A' }}</td>
                    <td data-label="Sexe">{{ cheval.sexe ? : 'N/A' }}</td>
                    <td data-label="Date de naissance">{{ cheval.dateNaissance ? cheval.dateNaissance|date('d/m/Y') : 'N/A' }}</td>
                    <td data-label="Propriétaires">
                      {% if (cheval.chevalProprietaires|length) > 0 %}
                        {% for cp in cheval.chevalProprietaires %}
                          <span class="tag is-info">
                            {{ cp.proprietaire.prenom }} {{ cp.proprietaire.nom }}
                            ({{ cp.pourcentage }}%)
                          </span>
                        {% endfor %}
                      {% else %}
                        <span class="tag is-light">Aucun</span>
                      {% endif %}
                    </td>
                    <td class="is-actions-cell">
                      <div class="buttons is-right">
                        <a href="{{ path('app_admin_cheval_update', { id: cheval.id }) }}" class="button is-small is-primary"><span class="icon"><i class="mdi mdi-pencil"></i></span></a>
                        <button class="button is-small is-danger jb-modal" data-target="modal-{{ cheval.id }}"><span class="icon"><i class="mdi mdi-trash-can"></i></span></button>
                      </div>
                    </td>
                  </tr>

                  {# Modal de confirmation suppression #}
                  <div id="modal-{{ cheval.id }}" class="modal">
                    <div class="modal-background jb-modal-close"></div>
                    <div class="modal-card">
                      <header class="modal-card-head">
                        <p class="modal-card-title">Confirmer la suppression</p>
                        <button class="delete jb-modal-close" aria-label="close"></button>
                      </header>
                      <section class="modal-card-body">
                        <p>Voulez-vous vraiment supprimer le cheval « {{ cheval.nom }} » ?</p>
                      </section>
                      <footer class="modal-card-foot">
                        <button class="button jb-modal-close">Annuler</button>
                        <a href="{{ path('app_admin_cheval_delete', { id: cheval.id }) }}" class="button is-danger jb-modal-close">Supprimer</a>
                      </footer>
                    </div>
                    <button class="modal-close is-large jb-modal-close" aria-label="close"></button>
                  </div>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
