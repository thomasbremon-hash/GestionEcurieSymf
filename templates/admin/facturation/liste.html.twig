{% extends 'layouts/base.admin.html.twig' %}

{% block title %}
  BackOffice | Facturation Entreprises
{% endblock %}

{% block body %}
  <section class="section is-title-bar">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <ul>
            <li>Admin</li>
            <li>Facturation</li>
          </ul>
        </div>
      </div>
      <div class="level-right">
        <a href="{{ path('app_admin_facturation_generer', { moisId: currentMois.id }) }}" class="button is-small is-primary">
          <span>Générer factures</span>
          <span class="icon"><i class="mdi mdi-plus"></i></span>
        </a>
      </div>
    </div>
  </section>

  <section class="section is-main-section">
    {% for label, messages in app.flashes(['success', 'danger']) %}
      {% for message in messages %}
        <div class="notification is-{{ label }}">
          <button class="delete"></button>
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}

    <div class="card has-table">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><span class="mdi mdi-file-document-box-multiple-outline"></span></span>
          {{ factures|length }} factures générées
        </p>
        <a href="#" class="card-header-icon"><span class="icon"><i class="mdi mdi-reload"></i></span></a>
      </header>

      <div class="card-content">
        <div class="b-table has-pagination">
          <div class="table-wrapper has-mobile-cards">
            <table class="table is-fullwidth is-striped is-hoverable" id="table">
              <thead>
                <tr>
                  <th class="has-text-left">Entreprise</th>
                  <th class="has-text-left">Mois / Année</th>
                  <th class="has-text-left">Total (€)</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for facture in factures %}
                  <tr>
                    <td data-label="Entreprise" class="has-text-left">
                      <span class="tag is-info">{{ facture.entreprise.nom }}</span>
                    </td>

                    <td data-label="Mois / Année" class="has-text-left">
                      <span class="tag is-info">{{ '%02d'|format(facture.moisDeGestion.mois) }}/{{ facture.moisDeGestion.annee }}</span>
                    </td>

                    <td data-label="Total (€)" class="has-text-left">
                      <span class="tag is-success">{{ facture.total|number_format(2, ',', ' ') }} €</span>
                    </td>

                    <td class="is-actions-cell">
                      <div class="buttons is-right">
                        <a href="{{ path('app_admin_facturation_show', { id: facture.id }) }}" class="button is-small is-info"><span class="icon"><i class="mdi mdi-eye"></i></span></a>
                        <button class="button is-small is-danger jb-modal" data-target="modal-delete-{{ facture.id }}"><span class="icon"><i class="mdi mdi-trash-can"></i></span></button>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
