{% extends 'layouts/base.admin.html.twig' %}

{% block title %}
  BackOffice | Gestion Mensuelle
{% endblock %}

{% block body %}
  <section class="section is-title-bar">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <ul>
            <li>Admin</li>
            <li>Mois de gestion</li>
          </ul>
        </div>
      </div>
      <div class="level-right">
        <a href="{{ path('app_admin_mois_gestion_new') }}" class="button is-small is-primary">
          <span>Ajouter</span>
          <span class="icon"><i class="mdi mdi-plus"></i></span>
        </a>
      </div>
    </div>
  </section>

  <section class="section is-main-section">
    {% for label, messages in app.flashes(['success', 'danger']) %}
      {% for message in messages %}
        <div class="notification is-{{ label }}">
          <button class="delete"></button>
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}

    <div class="card has-table">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><span class="mdi mdi-calendar-month-outline"></span></span>
          {{ moisGestion|length }} mois de gestion
        </p>
        <a href="#" class="card-header-icon"><span class="icon"><i class="mdi mdi-reload"></i></span></a>
      </header>

      <div class="card-content">
        <div class="b-table has-pagination">
          <div class="table-wrapper has-mobile-cards">
            <table class="table is-fullwidth is-striped is-hoverable is-fullwidth" id="table">
              <thead>
                <tr>
                  <th class="has-text-left">Mois / Année</th>
                  <th class="has-text-left">Chevaux</th>
                  <th class="has-text-left">Total général</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for item in moisGestion %}
                  <tr>
                    <td data-label="Mois / Année" class="has-text-left">
                      <span class="tag is-info">{{ '%02d'|format(item.mois) }}/{{ item.annee }}</span>
                    </td>

                    <td data-label="Chevaux" class="has-text-left">
                      {% set chevaux_ids = [] %}
                      {% for cp in item.chevalProduits %}
                        {% if cp.cheval.id not in chevaux_ids %}
                          {% set chevaux_ids = chevaux_ids|merge([cp.cheval.id]) %}
                        {% endif %}
                      {% endfor %}
                      <span class="tag is-info">{{ chevaux_ids|length }}</span>
                    </td>

                    <td data-label="Total général" class="has-text-left">
                      {% set total = 0 %}
                      {% for cp in item.chevalProduits %}
                        {% set total = total + cp.total %}
                      {% endfor %}
                      <span class="tag is-success">{{ total|number_format(2, ',', ' ') }} €</span>
                    </td>

                    <td class="is-actions-cell">
                      <div class="buttons is-right">
                        <a href="{{ path('app_admin_mois_gestion_show', { id: item.id }) }}" class="button is-small is-info"><span class="icon"><i class="mdi mdi-eye"></i></span></a>
                        <a href="{{ path('app_admin_mois_gestion_update', { id: item.id }) }}" class="button is-small is-primary"><span class="icon"><i class="mdi mdi-pencil"></i></span></a>

                        {# Bouton suppression #}
                        <button class="button is-small is-danger jb-modal" data-target="modal-delete-{{ item.id }}"><span class="icon"><i class="mdi mdi-trash-can"></i></span></button>
                      </div>
                    </td>

                    {# Modal suppression #}
                    <div id="modal-delete-{{ item.id }}" class="modal">
                      <div class="modal-background jb-modal-close"></div>
                      <div class="modal-card">
                        <header class="modal-card-head">
                          <p class="modal-card-title">Confirmer la suppression</p>
                          <button class="delete jb-modal-close"></button>
                        </header>
                        <section class="modal-card-body">
                          <p>
                            Voulez-vous vraiment supprimer le mois de gestion
                            <strong>{{ item.mois }}/{{ item.annee }}</strong> ?
                          </p>
                        </section>
                        <footer class="modal-card-foot">
                          <button class="button jb-modal-close">Annuler</button>
                          <a href="{{ path('app_admin_mois_gestion_delete', { id: item.id }) }}" class="button is-danger jb-modal-close">Supprimer</a>
                        </footer>
                      </div>
                    </div>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
