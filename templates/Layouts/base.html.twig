          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_home') }}">
                  Accueil
                  <span class="sr-only">(current)</span>
                </a>
              </li>

              <li class="nav-item">
                {% if is_granted('ROLE_ADMIN') %}
                  <a class="nav-link" href="{{ path('app_admin') }}">Admin</a>
                {% endif %}
              </li>

              <li class="nav-item">
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                  <a class="nav-link" href="{{ path('app_gestionnaire') }}">Gestionnaire</a>
                {% endif %}
              </li>

              <li class="nav-item">
                {% if is_granted('ROLE_CLIENT') %}
                  <a class="nav-link" href="{{ path('app_client') }}">Client</a>
                {% endif %}
              </li>

              <li class="nav-item">
                {% if is_granted('ROLE_COMPTABILITE') %}
                  <a class="nav-link" href="{{ path('app_comptabilite') }}">Comptabilité</a>
                {% endif %}
              </li>

              {% if app.user %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
              {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
              {% endif %}

              {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                    <span class="nav-label">BackOffice</span>
                    <span class="caret"></span>
