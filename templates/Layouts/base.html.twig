                  <ul class="dropdown-menu">
                    <li>
                      <a href="{{ path('app_admin') }}">Dashboard</a>
                    </li>
                    <li>
                      <a href="">Utilisateurs</a>
                    </li>

                    <li>
                      <a href="">Entreprises</a>
                    </li>
                    <li>
                      <a href="{{ path('app_admin_chevaux') }}">Chevaux</a>
                    </li>
                  </ul>
                </li>
              {% endif %}
            </ul>
          </div>
        </nav>
